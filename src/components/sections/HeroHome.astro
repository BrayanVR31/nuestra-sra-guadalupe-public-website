---
import { CldImage } from "astro-cloudinary";
import Text from "../common/Text.astro";
import Button from "../common/Button.astro";
import FadeIn from "../common/FadeIn.tsx";
import SocialNetwork from "../common/SocialNetwork.astro";
import Youtube from "../../assets/logos/youtube.svg";
import Facebook from "../../assets/logos/facebook.svg";

const heroClasses = [
  "min-h-hero-y",
  "w-full",
  "flex",
  "bg-cream-100",
  "relative",
];
---

<section class:list={heroClasses} aria-labelledby="hero-title">
  <!-- Hero content -->
  <article
    class:list={[
      "flex",
      "items-center",
      "text-center",
      "px-8",
      "md:px-16",
      "py-12",
      "min-[1366px]:text-left",
      "flex-1",
      "min-[820px]:max-[1366px]:z-2",
      "min-[820px]:max-[1366px]:min-w-full",
      "overflow-hidden",
    ]}
  >
    <div
      class="min-[820px]:max-[1366px]:max-w-xl min-[820px]:max-[1366px]:mx-auto min-[820px]:max-[1366px]:bg-cream-200/65 min-[820px]:max-[1366px]:backdrop-blur-xs min-[820px]:max-[1366px]:py-8 min-[820px]:max-[1366px]:px-16 min-[820px]:max-[1366px]:rounded-md"
    >
      <!-- Title -->
      <FadeIn client:visible>
        <Text
          variant="hero"
          id="hero-title"
          class="text-neutral-800 split-animate"
        >
          Bienvenidos a la Parroquia de nuestra
          <span class="text-gold-600 min-[820px]:max-[1366px]:text-gold-800"
            >Sra. de Guadalupe</span
          >
        </Text>
      </FadeIn>
      <!-- Description -->
      <FadeIn client:visible delay={0.2}>
        <Text
          variant="large-paragraph"
          class="mt-5 text-neutral-600 min-[820px]:max-[1366px]:text-gray-800"
          >Encuentra horarios de misa, servicios parroquiales y preparaci√≥n para
          los sacramentos.</Text
        >
      </FadeIn>
      <!-- Buttons -->
      <FadeIn client:visible delay={0.3}>
        <div class="mt-10">
          <Button variant="primary" type="a" href="/horarios"
            >Consulta horarios</Button
          >
        </div>
      </FadeIn>
    </div>
  </article>
  <!-- Hero image with clip path -->
  <div
    class:list={[
      "hero-img",
      "hidden",
      "min-[820px]:block",
      "lg:w-[55%]",
      "min-[1366px]:relative",
    ]}
  >
    <div
      class="min-[820px]:max-[1366px]:block hidden absolute inset-0 bg-stone-950/20 h-full w-full z-1"
    >
    </div>
    <picture>
      <CldImage
        src="home_hero_wudbiw"
        width={1600}
        height={900}
        sizes="(max-width: 768px) 100vw, 784px"
        alt="Parroquia de nuestra sra. Guadalupe"
        class:list={[
          "h-full!",
          "max-h-full!",
          "w-full",
          "object-cover",
          "min-[820px]:max-[1366px]:absolute!",
          "min-[820px]:max-[1366px]:top-0",
          "min-[820px]:max-[1366px]:left-0",
        ]}
        loading="eager"
        fetchpriority="high"
      />
    </picture>
    <div
      class:list={[
        "bg-cream-200",
        "top-1/2",
        "-translate-y-1/2",
        "right-6",
        "absolute",
        "flex",
        "flex-col",
        "shadow-lg",
        "min-[820px]:max-[1366px]:z-2",
      ]}
    >
      <SocialNetwork
        ariaLabel="Read more about nuestra sra. Guadalupe youtube channel"
        externalPath="https://www.youtube.com/@teatinospuebla3010"
      >
        <Youtube />
      </SocialNetwork>
      <SocialNetwork
        ariaLabel="Read more about nuestra sra. Guadalupe facebook webpage"
        externalPath="https://www.facebook.com/TeatinosPuebla/?locale=es_LA"
      >
        <Facebook />
      </SocialNetwork>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1366px) {
    .hero-img {
      clip-path: polygon(10% 0, 100% 0%, 100% 100%, 0 100%);
    }
  }
</style>
