---
import type { NavLink } from "./navigation-links";
type Props = NavLink;
const { name, path, icon: NavIcon } = Astro.props;
const { pathname } = Astro.url;
const isActive = path === pathname;
---

<a
  data-active={isActive ? "current" : "none"}
  class:list={[
    "text-sm",
    "flex",
    "items-center",
    "gap-2",
    "overflow-hidden",
    "px-4",
    "py-2",
    isActive ? "text-link" : "text-white",
    "font-semibold",
    "uppercase",
    "relative",
    "group/link",
    "hover:text-link",
    "transition-colors duration-300",
  ]}
  href={path}
>
  <NavIcon class="w-4" />
  {name}
  <div
    class="absolute w-full h-1 bg-link bottom-0 group-data-[active=current]/link:scale-x-100 scale-x-0 group-hover/link:scale-x-100 transition-all duration-400"
  >
  </div>
</a>
