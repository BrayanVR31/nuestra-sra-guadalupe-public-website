---
import { ArrowDown } from "@lucide/astro";

interface Props {
  title: string;
  description: string;
  image: string;
}
const { title, description, image } = Astro.props;
---

<section
  style={{
    backgroundImage: `url(${image})`,
  }}
  class:list={[
    "relative",
    "h-svh",
    "w-full",
    "bg-cover",
    "bg-center",
    "bg-no-repeat",
    "flex",
    "justify-center",
    "items-center",
    "bg-fixed",
  ]}
>
  <div class="text-center text-white z-1">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight">
      {title}
    </h1>
    <p class="text-lg md:text-xl mt-4 md:mt-6">{description}</p>
  </div>
  <!-- Overlay effect -->
  <div
    class="absolute inset-0 bg-linear-to-b from-bg-black/80 via-black/30 to-transparent backdrop-blur-xs"
  >
  </div>
  <!-- Scroll button -->
  <a
    class="flex items-center justify-center w-18 aspect-square absolute bg-white left-1/2 bottom-0 translate-y-1/2 -translate-x-1/2 shadow-md shadow-neutral-300 cursor-pointer *:animate-bounce *:scale-125 *:text-primary"
  >
    <ArrowDown />
  </a>
</section>
