---
import { ArrowDown } from "@lucide/astro";

interface Props {
  title: string;
  description: string;
  image: string;
}
const { title, description, image } = Astro.props;
---

<section
  style={{
    backgroundImage: `url(${image})`,
  }}
  class:list={[
    "relative",
    "h-svh",
    "w-full",
    "bg-cover",
    "bg-center",
    "bg-no-repeat",
    "flex",
    "justify-center",
    "items-center",
    "bg-fixed",
  ]}
>
  <div class="text-center text-white z-1">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight">
      {title}
    </h1>
    <p class="text-lg md:text-xl mt-4 md:mt-6">{description}</p>
  </div>
  <!-- Overlay effect -->
  <div
    class="absolute inset-0 bg-linear-to-b from-bg-black/80 via-black/30 to-transparent backdrop-blur-xs"
  >
  </div>
  <!-- Scroll button -->
  <a href="#main-content" class="absolute bottom-10 left-1/2 -translate-x-1/2 z-50 animate-bounce">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M7 13l5 5 5-5M7 6l5 5 5-5"/>
    </svg>
  </a>
</section>
