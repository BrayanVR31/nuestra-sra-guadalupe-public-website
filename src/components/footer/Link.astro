---
import { ArrowRight } from "@lucide/astro";

interface Props {
  resourcePath: string;
  isExternal?: boolean;
  isSocialMedia?: boolean;
  fill?: boolean;
  withArrow?: boolean;
}
const {
  resourcePath,
  isExternal = false,
  isSocialMedia = false,
  fill = true,
  withArrow = false,
} = Astro.props;
const linkProps = isExternal
  ? { target: "_blank", rel: "noopener noreferrer" }
  : {};
const linkClasses = isSocialMedia
  ? [
      "inline-block",
      "w-10",
      "h-10",
      "*:w-full",
      "*:h-full",
      "*:p-3",
      "border",
      "border-gold-500",
      fill ? "*:fill-gold-500" : "text-gold-500",
      "bg-tansparent",
      "rounded-full",
      "overflow-hidden",
      "hover:bg-gold-500",
      "hover:*:text-cream-100",
      "hover:*:fill-cream-100",
      "transition-all",
      "duration-300",
    ]
  : [
      "hover:text-gold-300",
      "transition-all",
      "inline-flex",
      "items-center",
      "gap-3",
    ];
---

<a
  class:list={[...linkClasses, "group/link"]}
  href={resourcePath}
  {...linkProps}
>
  <slot />
  {
    withArrow && (
      <ArrowRight class="ml-2 w-5 -translate-x-2 group-hover/link:translate-x-0 transition-all duration-300" />
    )
  }
</a>
