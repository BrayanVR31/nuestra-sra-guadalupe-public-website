---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import HorariosImage from "@/assets/images/horarios.jpg";
import ContainerLayout from "@/layouts/ContainerLayout.astro";
import ChurchScheduleSection from "@/features/ChurchSchedule/ChurchScheduleSection.astro";
---

<BaseLayout
  meta={{
    description:
      "Encuentra el horario de misas y celebraciones litúrgicas de nuestra parroquia. Acompáñanos en cada momento de fe y oración.",
  }}
  title="Horarios"
>
  <Hero
    title="Encuentra tu momento con Dios"
    description="Consulta nuestros horarios de misas, confesiones y adoración."
    image={HorariosImage}
  />
  <ContainerLayout>
    <ChurchScheduleSection />
  </ContainerLayout>
</BaseLayout>
