---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroHome from "@/components/sections/HeroHome.astro";
import SacramentsOverviewSection from "@/features/SacramentsOverview/SacramentsOverviewSection.astro";
import AnnouncementsSection from "@/features/AnnouncementList/AnnouncementsSection.astro";
import ContainerLayout from "@/layouts/ContainerLayout.astro";
import CalendarSaintSection from "@/features/CalendarSaint/CalendarSaintSection.astro";
import DailyGospelSection from "@/features/DailyGospel/DailyGospelSection.astro";
import HolyMassSection from "@/features/HolyMass/HolyMassSection.astro";
import CatechismSection from "@/features/Catechism/CatechismSection.astro";
---

<BaseLayout
  meta={{
    description:
      "Sitio web oficial de la Parroquia de Nuestra Señora de Guadalupe en Puebla. Horarios de misa, sacramentos, bautizos, bodas y servicios parroquiales. Clérigos Teatinos.",
  }}
  title="Inicio"
>
  <!-- <Hero /> -->
  <HeroHome />
  <ContainerLayout>
    <CatechismSection />
    <SacramentsOverviewSection />
    <div
      class="min-h-svh grid grid-cols-(--website-cols) max-sm:grid-cols-1 gap-16 min-[820px]:max-[1366px]:grid-cols-1 py-10"
    >
      <AnnouncementsSection />
      <aside>
        <CalendarSaintSection />
        <DailyGospelSection />
      </aside>
    </div>

    <HolyMassSection />
  </ContainerLayout>
</BaseLayout>
