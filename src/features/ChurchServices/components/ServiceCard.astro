---
import type { Sacrament } from "../types/sacrament.type";
// src/components/ServiceCard.astro
interface Props extends Sacrament {}

const { title, items, extraInfo, footerInfo, price, note, image } = Astro.props;
---

<article
  class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col md:flex-row md:even:flex-row-reverse gap-10"
>
  <figure
    class="overflow-hidden grow-0 shrink-0 rounded-xl w-full md:basis-1/3 basis-56"
  >
    <img class="w-full h-full object-cover" src={image} />
  </figure>
  <div class="flex flex-col h-full font-secondary">
    <h4 class="text-xl font-bold text-[#006957] mb-4 border-b pb-2">{title}</h4>

    <div class="grow space-y-4">
      <ul class="space-y-3">
        {
          items.map((item) => (
            <li class="text-sm">
              <div class="flex items-start gap-2 text-gray-700">
                <span class="text-[#006957] font-bold">✔</span>
                <span>{item.text}</span>
              </div>
              {item.subtext && (
                <p class="text-xs italic text-red-600 ml-6 mt-1">
                  {item.subtext}
                </p>
              )}
            </li>
          ))
        }
      </ul>

      {
        extraInfo && (
          <div class="bg-gray-50 p-3 rounded-lg text-xs text-gray-600 space-y-1">
            {extraInfo.map((info) => (
              <p>• {info}</p>
            ))}
          </div>
        )
      }
    </div>

    {
      footerInfo && (
        <div class="mt-4 pt-4 border-t border-gray-100 text-sm">
          {footerInfo.map((f) => (
            <div class="flex justify-between font-bold text-[#006957]">
              <span>{f.label}:</span> <span>{f.value}</span>
            </div>
          ))}
        </div>
      )
    }

    {
      note && (
        <p class="mt-4 text-[11px] italic text-red-600 font-bold leading-tight uppercase">
          *{note}
        </p>
      )
    }
  </div>
</article>
