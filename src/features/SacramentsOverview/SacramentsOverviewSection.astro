---
import Dove from "@/assets/logos/dove.svg";
import SacramentList from "./components/SacramentList";
---

<section
  class:list={[
    "min-h-svh",
    "grid",
    "place-items-center",
    "place-content-center",
  ]}
  id="sacramentos"
  aria-labelledby="sacramentos-home"
>
  <div
    class:list={[
      "inline-flex",
      "items-center",
      "justify-center",
      "gap-6",
      "mb-12",
      "mx-auto",
    ]}
  >
    <span
      class:list={[
        "md:inline-block",
        "hidden",
        "md:w-15",
        "md:h-15",
        "h-10",
        "w-10",
        "text-gold-500",
        "*:fill-current",
        "*:block",
        "*:w-full",
        "*:h-full",
        "*:mx-auto",
      ]}
    >
      <Dove />
    </span>
    <h3
      class:list={[
        "md:text-4xl",
        "text-4xl",
        "text-center",
        "text-ordinario-600",
        "uppercase",
        "font-semibold",
        "relative",
        "before:content-['']",
        "before:absolute",
        "before:w-1/2",
        "before:h-0.5",
        "before:bg-gold-500",
        "before:-bottom-1/3",
        "before:left-1/2",
        "before:-translate-x-1/2",
        "tracking-wider",
      ]}
      id="sacramentos-home"
    >
      Sacramentos
    </h3>
  </div>
  <SacramentList client:visible />
</section>
